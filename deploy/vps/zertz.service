[Unit]
Description=ZERTZ Online Server
After=network.target

[Service]
Type=simple
WorkingDirectory=/var/www/zertz
ExecStart=/usr/bin/node server/server.js
Restart=always
RestartSec=5
Environment=NODE_ENV=production
EnvironmentFile=/var/www/zertz/.env
User=www-data
Group=www-data

[Install]
WantedBy=multi-user.target
